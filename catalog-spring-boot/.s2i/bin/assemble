#!/bin/bash

echo "------ START BUILD INFO ------- "
echo $BUILD
echo $APP_VER
echo $XLDEPLOY_URL
pwd
echo "------ END BUILD INFO ------------"

/usr/local/s2i/assemble
rc=$?

if [ $rc -eq 0 ]; then
    if [ -n "$APP_VER" ]; then
        echo "-- Call /usr/local/s2i/xldeploy --"
        find /usr/local/s2i
        echo "GO"
        /usr/local/s2i/xldeploy $APP_VER $XLDEPLOY_URL /tmp/src/xebialabs
    fi
else
    echo "After failed assembling $rc"
fi

exit $rc
